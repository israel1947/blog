{
  "version": 2,
  "builds": [
    {
      "src": "app/angular.json",
      "use": "@vercel/angular",
      "buildCommand": "npm run frontend:build",
      "config": {
        "outputPath": "app/dist/sing-in-google-app"
      }
    },
    {
      "src": "api/main.ts",
      "use": "@vercel/node",
      "buildCommand": "npm run start:backend:prod",
      "config": {
        "includeFiles": [
          "api/dist/**",
          "api/src/**",
          "api/node_modules/**",
          "api/package.json"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/dist/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "app/dist/sing-in-google-app/$1"
    }
  ]
}